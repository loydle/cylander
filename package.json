{
  "name": "cylander",
  "version": "1.0.0",
  "description": "Cylander is a non-profit association dedicated to providing and producing free Cyber Security Knowledge",
  "scripts": {
    "start": "web-dev-server --config web-dev-server.config.mjs",
    "start:watch": "concurrently 'npm run start' 'npx nodemon --watch ./scene-generator --exec \"npm run generate:dev:all\"'",
    "test": "jest --verbose --coverage",
    "test:browser": "jest --config=jest.config.js --testPathPattern=tests/browser",
    "test:node": "jest --config=jest.config.js --testPathPattern=tests/node",
    "format": "prettier --write \"**/**/*.js\" --config .prettierrc.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "generate:prod:all": "NODE_ENV=production  node ./scene-generator/generateAllScenes.js",
    "generate:dev:all": "NODE_ENV=development  node ./scene-generator/generateAllScenes.js"
  },
  "dependencies": {
    "phaser": "^3.60.0"
  },
  "devDependencies": {
    "@web/dev-server": "^0.3.0",
    "@web/test-runner": "^0.17.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "prettier": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run generate:prod:all ; npm run test && npm run lint:fix && npm run format",
      "pre-push": "npm run lint"
    }
  }
}
